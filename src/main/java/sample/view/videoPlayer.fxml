<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.media.MediaView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" >
    <MediaView fitWidth="300" fitHeight="300" fx:id="mv_mediaView">

    </MediaView>
    <Slider fx:id="sl_progress"/>

    <HBox alignment="CENTER" spacing="16">
        <Button fx:id="btn_stop" onAction="#onStopClick"><graphic><ImageView><Image requestedHeight="25" requestedWidth="25" url="@../resource/img/b5.png"></Image></ImageView></graphic></Button>
        <Button fx:id="btn_play" onAction="#onPlayClick"><graphic><ImageView><Image requestedHeight="25" requestedWidth="25"  url="@../resource/img/播放.png"></Image></ImageView></graphic></Button>
        <Slider fx:id="sl_volume"></Slider>
    </HBox>
</fx:root>
