<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controller.CreateHTML2Controller"
      stylesheets="@css/sf.css"
      spacing="8"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="2.输出调查表网页" prefWidth="Infinity" alignment="CENTER" styleClass="yellowTitle"></Label>

    <HBox spacing="16">
        <VBox>
            <Label text="调查表清单"></Label>
            <ListView></ListView>
        </VBox>

        <VBox alignment="CENTER" spacing="8">
            <Button prefWidth="80" prefHeight="30"><graphic><ImageView fitWidth="15" fitHeight="15"><image><Image url="@../resource/img/right1.png"></Image></image></ImageView></graphic></Button>
            <Button prefWidth="80" prefHeight="30"><graphic><ImageView fitWidth="15" fitHeight="15"><image><Image url="@../resource/img/left1.png"></Image></image></ImageView></graphic></Button>
            <Button prefWidth="80" prefHeight="30"><graphic><ImageView fitWidth="15" fitHeight="15"><image><Image url="@../resource/img/right2.png"></Image></image></ImageView></graphic></Button>
            <Button prefWidth="80" prefHeight="30"><graphic><ImageView fitWidth="15" fitHeight="15"><image><Image url="@../resource/img/left2.png"></Image></image></ImageView></graphic></Button>
        </VBox>

        <VBox>
            <Label text="已选择的调查表"></Label>
            <ListView></ListView>
        </VBox>
    </HBox>

    <HBox spacing="16">
        <CheckBox text="网页是否显示说话人"></CheckBox>
        <CheckBox text="是否显示元数据"></CheckBox>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="16">
        <RadioButton text="页面不分页显示"></RadioButton>
        <RadioButton text="页面分页显示"></RadioButton>
        <HBox alignment="CENTER">
            <Label text="每页"></Label>
            <ChoiceBox>
                <String fx:value="200"></String>
            </ChoiceBox>
            <Label text="行"></Label>
        </HBox>
    </HBox>

    <AnchorPane>

        <HBox alignment="CENTER_LEFT" >
            <Label text="字词分栏"></Label>
            <ChoiceBox>
                <String fx:value="2"></String>
            </ChoiceBox>

            <Label text="对齐"><HBox.margin><Insets><left>16</left></Insets></HBox.margin></Label>
            <ChoiceBox>
                <String fx:value="左对齐"></String>
            </ChoiceBox>


        </HBox>
        <Button text="输出调查表网页" wrapText="false" AnchorPane.rightAnchor="0">
        </Button>
    </AnchorPane>


    <VBox styleClass="hint">
        <Label text="操作说明："></Label>
        <Label text="(1)一种语言的语档包括该语言的全部调查表。"></Label>
        <Label text="(2)只输出调查表中有音标记音或录音的条目。"></Label>
    </VBox>
</VBox>
